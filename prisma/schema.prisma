// DB 뼈대 만드는 파일

// 클라이언트에서 Prisma DB를 연결하기 위해서 prisma-client 필요
generator client {
  provider = "prisma-client-js"
}

// 어떤 종류의 DB를 사용할 것인지
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 테이블
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
}