generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 테이블
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  nickname  String?
  name      String?
  image     String?
  password  String?
  provider  String?
  diaries   Diary[]
}

enum Emotion {
  best
  good
  normal
  bad
  worst
}

model Diary {
  id        String   @id @default(cuid())
  userId    String
  date      String
  title     String
  content   String
  emotion   Emotion
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@index([userId, date])
}